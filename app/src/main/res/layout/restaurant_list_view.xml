<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6.5dp">

        <TextView
            android:id="@+id/restaurant_list_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/restaurant_list_adress_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/restaurant_list_opening_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="6.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_list_distance_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/restaurant_list_people_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/border_person_ico"/>

            <TextView
                android:id="@+id/restaurant_list_people_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorGrey"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/restaurant_list_star_imv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/star_border_ico"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6.5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/restaurant_list_photo_imv"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    </LinearLayout>

</LinearLayout>